<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:userControls1="clr-namespace:CloudlogHelper.UserControls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CloudlogHelper.UserControls.TipIconUserControl"
             x:DataType="userControls1:TipIconUserControl">
    <Image Margin="5,0,0,0"
           Width="20"
           Height="20"
           Source="avares://CloudlogHelper/Assets/Settings/Help.png"
           VerticalAlignment="Center"
           Cursor="Hand">
        <ToolTip.Tip>
            <TextBlock Text="{Binding TooltipText}"
                       FontSize="14"
                       MaxWidth="300"
                       TextWrapping="Wrap" />
        </ToolTip.Tip>
    </Image>
</UserControl>