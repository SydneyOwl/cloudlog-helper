<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:resources="clr-namespace:CloudlogHelper.Resources"
             xmlns:userControls="clr-namespace:CloudlogHelper.ViewModels.UserControls"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:userControls1="clr-namespace:CloudlogHelper.Views.UserControls"
             mc:Ignorable="d" d:DesignWidth="350" d:DesignHeight="300"
             x:Class="CloudlogHelper.Views.UserControls.UserBasicDataGroupboxUserControl"
             x:DataType="userControls:UserBasicDataGroupboxUserControlViewModel">

    <Design.DataContext>
        <userControls:UserBasicDataGroupboxUserControlViewModel />
    </Design.DataContext>

    <HeaderedContentControl Header="{I18N {x:Static resources:LangKeys.basicinfo}}" 
                            Margin="10"
                            MaxWidth="480"
                            HorizontalAlignment="Stretch" 
                            HorizontalContentAlignment="Stretch">
        <Border CornerRadius="12"
                Padding="16" 
                BorderThickness="1"
                BorderBrush="{DynamicResource ThemeBorderMidBrush}"
                Background="{DynamicResource ThemeControlLowBrush}">

            <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" 
                  ColumnDefinitions="Auto,*,Auto,Auto"
                  RowSpacing="6"
                  VerticalAlignment="Center">

                <!-- OP -->
                <avalonia:MaterialIcon Grid.Row="0" Grid.Column="0" Kind="{Binding BackendType}" 
                                        Foreground="{DynamicResource ThemeForegroundBrush}" 
                                        Width="20" Height="20" Margin="0,0,12,0"/>
                <TextBlock Grid.Row="0" Grid.Column="1"
                           Text="{I18N {x:Static resources:LangKeys.op}}"
                           FontSize="14" VerticalAlignment="Center" />
                <Border Grid.Row="0" Grid.Column="2" CornerRadius="8" Padding="10,6"
                        Background="{DynamicResource ThemeAccentBrush}" 
                        HorizontalAlignment="Right">
                    <TextBlock Text="{Binding OP}" FontSize="14" FontWeight="SemiBold"
                               Foreground="{DynamicResource ThemeForegroundOnAccentBrush}"
                               HorizontalAlignment="Right" TextWrapping="Wrap" MaxWidth="180"/>
                </Border>

                <!-- Grid -->
                <avalonia:MaterialIcon Grid.Row="1" Grid.Column="0" Kind="MapMarker" 
                                        Foreground="{DynamicResource ThemeForegroundBrush}" 
                                        Width="20" Height="20" Margin="0,0,12,0"/>
                <TextBlock Grid.Row="1" Grid.Column="1"
                           Text="{I18N {x:Static resources:LangKeys.grid}}"
                           FontSize="14" VerticalAlignment="Center" />
                <Border Grid.Row="1" Grid.Column="2" CornerRadius="8" Padding="10,6"
                        Background="{DynamicResource ThemeControlMidBrush}">
                    <TextBlock Text="{Binding GridSquare}" FontSize="14" FontWeight="SemiBold"
                               HorizontalAlignment="Right" TextTrimming="CharacterEllipsis"/>
                </Border>

                <!-- Today QSOs -->
                <avalonia:MaterialIcon Grid.Row="2" Grid.Column="0" Kind="CalendarToday" 
                                        Foreground="{DynamicResource ThemeForegroundBrush}" 
                                        Width="20" Height="20" Margin="0,0,12,0"/>
                <TextBlock Grid.Row="2" Grid.Column="1"
                           Text="{I18N {x:Static resources:LangKeys.dayqsos}}"
                           FontSize="14" VerticalAlignment="Center" />
                <Border Grid.Row="2" Grid.Column="2" CornerRadius="8" Padding="10,6"
                        Background="{DynamicResource ThemeControlMidBrush}">
                    <TextBlock Text="{Binding QsToday}" FontSize="14" FontWeight="SemiBold"
                               HorizontalAlignment="Right" TextTrimming="CharacterEllipsis"/>
                </Border>

                <!-- Month QSOs -->
                <avalonia:MaterialIcon Grid.Row="3" Grid.Column="0" Kind="CalendarMonth" 
                                        Foreground="{DynamicResource ThemeForegroundBrush}" 
                                        Width="20" Height="20" Margin="0,0,12,0"/>
                <TextBlock Grid.Row="3" Grid.Column="1"
                           Text="{I18N {x:Static resources:LangKeys.monthqsos}}"
                           FontSize="14" VerticalAlignment="Center" />
                <Border Grid.Row="3" Grid.Column="2" CornerRadius="8" Padding="10,6"
                        Background="{DynamicResource ThemeControlMidBrush}">
                    <TextBlock Text="{Binding QsMonth}" FontSize="14" FontWeight="SemiBold"
                               HorizontalAlignment="Right" TextTrimming="CharacterEllipsis"/>
                </Border>

                <!-- Year QSOs -->
                <avalonia:MaterialIcon Grid.Row="4" Grid.Column="0" Kind="CalendarRange" 
                                        Foreground="{DynamicResource ThemeForegroundBrush}" 
                                        Width="20" Height="20" Margin="0,0,12,0"/>
                <TextBlock Grid.Row="4" Grid.Column="1"
                           Text="{I18N {x:Static resources:LangKeys.yearqsos}}"
                           FontSize="14" VerticalAlignment="Center" />
                <Border Grid.Row="4" Grid.Column="2" CornerRadius="8" Padding="10,6"
                        Background="{DynamicResource ThemeControlMidBrush}">
                    <TextBlock Text="{Binding QsYear}" FontSize="14" FontWeight="SemiBold"
                               HorizontalAlignment="Right" TextTrimming="CharacterEllipsis"/>
                </Border>

                <StackPanel Grid.Row="0" Grid.Column="3"
                    Grid.RowSpan="6" Margin="10,0,0,0" 
                    VerticalAlignment="Center" Spacing="10">
                    <userControls1:WindowSplitToggleButtonUserControl
                        DataContext="{Binding SplitUserControlViewModel}"
                        Width="30" Height="30" />
                </StackPanel>
            </Grid>
        </Border>
    </HeaderedContentControl>
</UserControl>