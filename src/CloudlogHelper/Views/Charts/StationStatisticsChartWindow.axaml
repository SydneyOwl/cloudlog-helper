<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:CloudlogHelper.ViewModels"
        xmlns:charts="clr-namespace:CloudlogHelper.ViewModels.Charts"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
        Width="1000" Height="700"
        x:Class="CloudlogHelper.Views.Charts.StationStatisticsChartWindow"
        x:DataType="charts:StationStatisticsChartWindowViewModel"
        Title="StationStatisticsChartWindow">
     <Design.DataContext>
        <charts:StationStatisticsChartWindowViewModel />
    </Design.DataContext>
    
    <Window.Styles>
        <Style Selector="TextBlock.header">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style Selector="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
        
        <Style Selector="ToggleButton">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
        
        <Style Selector="ComboBox">
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        
        <Style Selector="CheckBox">
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </Window.Styles>
    
    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Bottom" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Left"
                    Spacing="10"
                    Margin="10"
                    Height="40">
            
            <Button Content="刷新" 
                    HorizontalAlignment="Stretch"
                    Command="{Binding RefreshChart}"
                    Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"/>
            
            <ToggleButton Content="暂停更新" 
                          HorizontalAlignment="Stretch"
                          IsChecked="{Binding UpdatePaused}"
                          Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                          BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"/>
            
            <CheckBox Content="自动选择" IsChecked="{Binding AutoSwitchEnabled}" 
                      VerticalAlignment="Center" Margin="20,0,5,0"/>
            
            <ComboBox ItemsSource="{Binding Bands}"
                      SelectedValue="{Binding SelectedBand}"
                      Width="80"/>
                    
            <ComboBox ItemsSource="{Binding Modes}"
                      SelectedValue="{Binding SelectedMode}"
                      Width="80"/>
                    
            <ComboBox ItemsSource="{Binding Clients}"
                      SelectedValue="{Binding SelectedClient}"
                      Width="100"/>
            
            <TextBlock Margin="10,0,0,0"
                       Text="已收到样本数 = "
                       Foreground="{DynamicResource HighlightForegroundBrush}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" FontWeight="Black" />
            
            <TextBlock Text="{Binding SampleCount}"
                       Foreground="{DynamicResource HighlightForegroundBrush}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" FontWeight="Black" />
            
            <TextBlock Margin="30,0,0,0"
                Text="{Binding LastDataUpdatedAt}"
                       Foreground="{DynamicResource HighlightForegroundBrush}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" FontWeight="Black" />
            
        </StackPanel>
        
        <Grid>
            <ContentControl x:Name="plotControl" 
                           Content="{Binding PlotControl, Mode=OneTime}"
                           IsVisible="{Binding !ShowErrorMsg}"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"/>
            
            <TextBlock Text="{Binding ErrorMessage}"
                      IsVisible="{Binding ShowErrorMsg}"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      FontSize="16"
                      FontWeight="Bold"
                      Foreground="{DynamicResource SystemControlForegroundAccentBrush}"
                      TextAlignment="Center"/>
        </Grid>
    </DockPanel>
</Window>
