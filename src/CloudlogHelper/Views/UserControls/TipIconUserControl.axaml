<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:userControls="clr-namespace:CloudlogHelper.Views.UserControls"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CloudlogHelper.Views.UserControls.TipIconUserControl"
             x:DataType="userControls:TipIconUserControl">
    <avalonia:MaterialIcon Kind="HelpCircleOutline"
                           Background="Transparent"
                           Foreground="CornflowerBlue"
                           Width="20"
                           Height="20"
                           VerticalAlignment="Center"
                           Cursor="Hand">
        <ToolTip.Tip>
            <TextBlock Text="{Binding TooltipText}"
                       FontSize="14"
                       MaxWidth="300"
                       TextWrapping="Wrap" />
        </ToolTip.Tip>
        <ToolTip.ShowDelay>
            10
        </ToolTip.ShowDelay>
    </avalonia:MaterialIcon>
</UserControl>