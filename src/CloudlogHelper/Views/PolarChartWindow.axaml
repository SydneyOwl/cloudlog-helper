<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:avalonia="clr-namespace:ScottPlot.Avalonia;assembly=ScottPlot.Avalonia"
        xmlns:viewModels="clr-namespace:CloudlogHelper.ViewModels"
        mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="500"
        Width="700" Height="500"
        CanResize="False"
        x:Class="CloudlogHelper.Views.PolarChartWindow"
        Title="ChartsWindow"
        x:DataType="viewModels:PolarChartWindowViewModel">
    
    <Design.DataContext>
        <viewModels:PolarChartWindowViewModel />
    </Design.DataContext>
    
    <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="0.5*,*" ShowGridLines="False">
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="10" Spacing="3">
            <TextBlock Text="控制面板" FontSize="14" FontWeight="Bold"/>
            <Grid ShowGridLines="False" ColumnDefinitions="*,*" RowDefinitions="*,*" RowSpacing="10" Margin="0,5,0,0">
                <ToggleButton Grid.Row="0" Grid.Column="0" Content="暂停更新" HorizontalAlignment="Center" IsChecked="{Binding UpdatePaused}"/>
                <Button Grid.Row="0" Grid.Column="1" Content="导出图表" HorizontalAlignment="Center" Command="{Binding SaveChart}"/>
                <Button Grid.Row="1" Grid.Column="0" Content="刷新" HorizontalAlignment="Center" Command="{Binding RefreshChart}"/>
            </Grid>
            
            <Separator Margin="0,10"/>
            
            <CheckBox Content="显示密度颜色" IsChecked="{Binding ShowDestColor}"/>
            <CheckBox Content="过滤重复样本（呼号）" IsChecked="{Binding FilterDupeCallsign}"/>
            
            <StackPanel Margin="0,10,0,0">
                <TextBlock Text="最大取样点数量" />
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding #qsoSlider.Value}" VerticalAlignment="Center" Margin="0,0,20,0" Width="35"/>
                    <Slider Minimum="100" Maximum="5000" 
                            Value="{Binding QSOSamples}"
                            IsSnapToTickEnabled="True" TickFrequency="100" x:Name="qsoSlider" Width="170"/>
                </StackPanel>
            </StackPanel>
            
            <StackPanel Margin="0,0,0,0">
                <TextBlock Text="KNN K值" />
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding #kSlider.Value}" VerticalAlignment="Center" Margin="0,0,20,0" Width="35"/>
                    <Slider Minimum="1" Maximum="10" 
                            Value="{Binding KValue}"
                            IsSnapToTickEnabled="True" TickFrequency="1" x:Name="kSlider" Width="170"/>
                </StackPanel>
            </StackPanel>
            
            <StackPanel Margin="0,0,0,0">
                <TextBlock Text="距离权重" />
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding #distSlider.Value}" VerticalAlignment="Center" Margin="0,0,20,0" Width="35"/>
                    <Slider Minimum="0" Maximum="1" 
                            Value="{Binding DistWeightValue}"
                            IsSnapToTickEnabled="True" TickFrequency="0.1" x:Name="distSlider" Width="170"/>
                </StackPanel>
            </StackPanel>
            
            <StackPanel Margin="0,0,0,0">
                <TextBlock Text="角度权重" />
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding #angSlider.Value}" VerticalAlignment="Center" Margin="0,0,20,0" Width="35"/>
                    <Slider Minimum="0" Maximum="1" 
                            Value="{Binding AngWeightValue}"
                            IsSnapToTickEnabled="True" TickFrequency="0.1" x:Name="angSlider" Width="170"/>
                </StackPanel>
            </StackPanel>
            
        </StackPanel>
        
        <Border Grid.Row="1" Grid.Column="1" Margin="10" BorderBrush="Gray" BorderThickness="1">
            <Grid x:Name="ChartContainerGrid">
                <TextBlock Text="{Binding ErrorMessage}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Foreground="Red"
                           FontWeight="Medium" FontSize="15"
                           IsVisible="{Binding ShowErrorMsg}"
                           Margin="5"/>
                <ContentControl x:Name="plotControl" Content="{Binding PlotControl, Mode=OneTime}"
                                IsVisible="{Binding !ShowErrorMsg}"/>
                <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Orientation="Horizontal"
                            Margin="5" Spacing="10">
                    <CheckBox Content="自动选择" IsChecked="{Binding AutoSwitchEnabled}"/>
                    <!-- band -->
                    <ComboBox ItemsSource="{Binding Bands}"
                              SelectedValue="{Binding SelectedBand}"/>
                    <!-- mode -->
                    <ComboBox ItemsSource="{Binding Modes}"
                              SelectedValue="{Binding SelectedMode}"/>
                    <!-- client -->
                    <ComboBox ItemsSource="{Binding Clients}"
                              SelectedValue="{Binding SelectedClient}"/>
                </StackPanel>
                <TextBlock Text="{Binding LastDataUpdatedAt}" VerticalAlignment="Bottom"
                           FontStyle="Italic" FontWeight="Medium" FontSize="10"
                          Margin="5"/>
            </Grid>
        </Border>
        
    </Grid>
</Window>
