<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:resources="clr-namespace:CloudlogHelper.Resources"
        xmlns:viewModels="clr-namespace:CloudlogHelper.ViewModels"
        xmlns:userControls1="clr-namespace:CloudlogHelper.Views.UserControls"
        xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
        mc:Ignorable="d" d:DesignWidth="650" d:DesignHeight="550"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        x:Class="CloudlogHelper.Views.MainWindow"
        Icon="avares://CloudlogHelper/Assets/icon.png"
        Title="CloudlogHelper"
        Topmost="{Binding IsTopmost}"
        CanResize="False"
        x:DataType="viewModels:MainWindowViewModel">

    <Design.DataContext>
        <viewModels:MainWindowViewModel />
    </Design.DataContext>

    <StackPanel>
        <!-- menu -->
        <StackPanel>
            <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto" ShowGridLines="False">
                <Menu Grid.Row="0" Grid.Column="0">
                    <MenuItem Header="{I18N {x:Static resources:LangKeys.settings}}">
                        <MenuItem Header="{I18N {x:Static resources:LangKeys.basicsettings}}"
                                  Command="{Binding OpenSettingsWindow}">
                            <MenuItem.Icon>
                                <avalonia:MaterialIcon Kind="Settings" Width="32" Height="32"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="{I18N {x:Static resources:LangKeys.themecolor}}">
                            <MenuItem.Icon>
                                <avalonia:MaterialIcon Kind="ThemeLightDark" Width="32" Height="32"/>
                            </MenuItem.Icon>
                            <MenuItem Header="{I18N {x:Static resources:LangKeys.light}}"
                                      Command="{Binding SwitchLightTheme}">
                                <MenuItem.Icon>
                                    <avalonia:MaterialIcon Kind="WbSunny" Width="32" Height="32"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="{I18N {x:Static resources:LangKeys.dark}}"
                                      Command="{Binding SwitchDarkTheme}">
                                <MenuItem.Icon>
                                    <avalonia:MaterialIcon Kind="MoonAndStars" Width="32" Height="32"/>
                                </MenuItem.Icon>
                            </MenuItem>
                        </MenuItem>

                        <MenuItem Header="{I18N {x:Static resources:LangKeys.tools}}">
                            <MenuItem.Icon>
                                <avalonia:MaterialIcon Kind="ToolboxOutline" Width="32" Height="32"/>
                            </MenuItem.Icon>
                            <MenuItem Header="{I18N {x:Static resources:LangKeys.qsoassistant}}"
                                      Command="{Binding OpenQSOAssistantWindow}">
                                <MenuItem.Icon>
                                    <avalonia:MaterialIcon Kind="FileUploadOutline" Width="32" Height="32"/>
                                </MenuItem.Icon>
                            </MenuItem>
                        </MenuItem>
                    </MenuItem>
                    <MenuItem Header="{I18N {x:Static resources:LangKeys.help}}">
                        <MenuItem Header="{I18N {x:Static resources:LangKeys.about}}"
                                  Command="{Binding OpenAboutWindow}">
                            <MenuItem.Icon>
                                <avalonia:MaterialIcon Kind="InfoCircleOutline" Width="32" Height="32"/>
                            </MenuItem.Icon>
                        </MenuItem>
                    </MenuItem>
                </Menu>
                <ToggleButton Grid.Column="2" Grid.Row="0" IsChecked="{Binding IsTopmost}"
                              Margin="2">
                    <avalonia:MaterialIcon Kind="Pin" Width="20" Height="20"/>
                </ToggleButton>
                <userControls1:StatusLightUserControl Grid.Column="1" Grid.Row="0"
                                                      DataContext="{Binding StatusLightUserControlViewModel}"
                                                      ViewModel="{Binding}"
                                                      Margin="10,0,10,0" />
            </Grid>
        </StackPanel>

        <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
            <userControls1:UserBasicDataGroupboxUserControl Grid.Column="0" Grid.Row="0"
                                                            IsVisible="{Binding ((viewModels:MainWindowViewModel)DataContext).UserBasicBoxEnabled,
                                                            RelativeSource={RelativeSource AncestorType=Grid}}"
                                                            ViewModel="{Binding}"
                                                            DataContext="{Binding UserBasicDataGroupboxUserControlVm}" />
            <userControls1:RIGDataGroupboxUserControl Grid.Column="0" Grid.Row="1"
                                                      IsVisible="{Binding ((viewModels:MainWindowViewModel)DataContext).RigDataBoxEnabled,
                                                        RelativeSource={RelativeSource AncestorType=Grid}}"
                                                      DataContext="{Binding RigDataGroupboxUserControlVm}"
                                                      ViewModel="{Binding }" />
            <userControls1:UDPLogInfoGroupboxUserControl Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" 
                                                         IsVisible="{Binding ((viewModels:MainWindowViewModel)DataContext).UDPLogBoxEnabled,
                                                        RelativeSource={RelativeSource AncestorType=Grid}}"
                                                         DataContext="{Binding UDPLogInfoGroupboxUserControlVm}"
                                                         ViewModel="{Binding }" />
        </Grid>
    </StackPanel>

</Window>