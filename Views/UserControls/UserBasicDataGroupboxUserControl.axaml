<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:resources="clr-namespace:CloudlogHelper.Resources"
             xmlns:userControls="clr-namespace:CloudlogHelper.ViewModels.UserControls"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="450"
             x:Class="CloudlogHelper.Views.UserControls.UserBasicDataGroupboxUserControl"
             x:DataType="userControls:UserBasicDataGroupboxUserControlViewModel">

    <Design.DataContext>
        <userControls:UserBasicDataGroupboxUserControlViewModel />
    </Design.DataContext>

    <HeaderedContentControl Header="{I18N {x:Static resources:LangKeys.basicinfo}}" Margin="16"
                            HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
        <Border CornerRadius="12" 
                Padding="16" BorderThickness="1" BorderBrush="{DynamicResource ThemeBorderMidBrush}"
                HorizontalAlignment="Stretch">
            
            <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="*,*"
                  VerticalAlignment="Center" HorizontalAlignment="Stretch">
                
                <!-- op -->
                <TextBlock Grid.Row="0" Grid.Column="0" 
                           Text="{I18N {x:Static resources:LangKeys.op}}"
                           FontSize="15"
                           VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <Border Grid.Row="0" Grid.Column="1" CornerRadius="6" Padding="8,4" Margin="8,0,0,0"
                        HorizontalAlignment="Stretch">
                    <TextBlock Text="{Binding OP}" FontSize="15" FontWeight="SemiBold"
                               HorizontalAlignment="Left" TextTrimming="CharacterEllipsis"/>
                </Border>

                <!-- grid -->
                <TextBlock Grid.Row="1" Grid.Column="0" 
                           Text="{I18N {x:Static resources:LangKeys.grid}}"
                           FontSize="15" 
                           VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <Border Grid.Row="1" Grid.Column="1" CornerRadius="6" Padding="8,4" Margin="8,0,0,0"
                        HorizontalAlignment="Stretch">
                    <TextBlock Text="{Binding GridSquare}" FontSize="15" FontWeight="SemiBold"
                               HorizontalAlignment="Left" TextTrimming="CharacterEllipsis"/>
                </Border>

                <!-- today -->
                <TextBlock Grid.Row="2" Grid.Column="0" 
                           Text="{I18N {x:Static resources:LangKeys.dayqsos}}"
                           FontSize="15" 
                           VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <Border Grid.Row="2" Grid.Column="1" CornerRadius="6" Padding="8,4" Margin="8,0,0,0"
                        HorizontalAlignment="Stretch">
                    <TextBlock Text="{Binding QsToday}" FontSize="15" FontWeight="SemiBold"
                               HorizontalAlignment="Left" TextTrimming="CharacterEllipsis"/>
                </Border>

                <!-- month -->
                <TextBlock Grid.Row="3" Grid.Column="0" 
                           Text="{I18N {x:Static resources:LangKeys.monthqsos}}"
                           FontSize="15" 
                           VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <Border Grid.Row="3" Grid.Column="1" CornerRadius="6" Padding="8,4" Margin="8,0,0,0"
                        HorizontalAlignment="Stretch">
                    <TextBlock Text="{Binding QsMonth}" FontSize="15" FontWeight="SemiBold"
                               HorizontalAlignment="Left" TextTrimming="CharacterEllipsis"/>
                </Border>

                <!-- Year QSO -->
                <TextBlock Grid.Row="4" Grid.Column="0" 
                           Text="{I18N {x:Static resources:LangKeys.yearqsos}}"
                           FontSize="15" 
                           VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <Border Grid.Row="4" Grid.Column="1" CornerRadius="6" Padding="8,4" Margin="8,0,0,0"
                        HorizontalAlignment="Stretch">
                    <TextBlock Text="{Binding QsYear}" FontSize="15" FontWeight="SemiBold"
                               HorizontalAlignment="Left" TextTrimming="CharacterEllipsis"/>
                </Border>
            </Grid>
        </Border>
    </HeaderedContentControl>
</UserControl>