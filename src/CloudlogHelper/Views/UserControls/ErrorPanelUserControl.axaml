<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:userControls="clr-namespace:CloudlogHelper.ViewModels.UserControls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CloudlogHelper.Views.UserControls.ErrorPanelUserControl"
             x:DataType="userControls:ErrorPanelUserControlViewModel">

    <Design.DataContext>
        <userControls:ErrorPanelUserControlViewModel />
    </Design.DataContext>
    <Border Background="#FFAA00" CornerRadius="5" Padding="10"
            IsVisible="{Binding  ShowErrorPanel}">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Image Source="avares://CloudlogHelper/Assets/Others/Error.png" Width="40" Margin="0,0,20,0" />
            <TextBlock Text="{Binding ErrorMessage}"
                       MaxWidth="370"
                       MaxLines="3"
                       Foreground="Black"
                       FontSize="15"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       TextTrimming="CharacterEllipsis"
                       Margin="20,0,20,0"
                       TextWrapping="Wrap" />
        </StackPanel>
    </Border>
</UserControl>